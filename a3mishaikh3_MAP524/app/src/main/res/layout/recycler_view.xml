<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <TextView
        android:id="@+id/tvLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Line 1 text goes here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Line 2 text goes here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLine1"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/tvLine3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Line 3 text goes here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLine2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvLine4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Line 4 text goes here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLine3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivCharacterPhoto"
        android:layout_width="384dp"
        android:layout_height="134dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        app:layout_constraintTop_toBottomOf="@+id/tvLine4"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>